# Bandit configuration for PiKaraoke
# See https://bandit.readthedocs.io/en/latest/config.html

exclude_dirs:
  - /tests
  - /.venv
  - /venv
  - /__pycache__

# Tests to skip
skips:
  # B603: subprocess without shell=True (we need shell for some commands)
  - B603
  # B607: Starting a process with a partial path (acceptable for system commands)
  - B607
  # B110: Try/except/pass is intentional for graceful cleanup and error handling
  - B110
  # B324: MD5 used for non-cryptographic hashing (change detection, not security)
  - B324
  # B608: SQL injection warnings - we use parameterized queries safely
  - B608
  # B404: subprocess module needed for system integration
  - B404
  # B605: shell commands needed for system operations (shutdown, reboot, etc)
  - B605
  # B104: Binding to all interfaces is intentional for network accessibility
  - B104
  # B311: random module used for non-security purposes (queue shuffling, etc)
  - B311
  # B105: Empty password string is initialization, not hardcoded credential
  - B105
  # B602: shell=True needed for platform compatibility
  - B602
  # B405/B314: XML parsing in legacy VLC client (deprecated, not active by default)
  - B405
  - B314
  # B113: requests timeout warnings in legacy VLC client (deprecated)
  - B113
  # B108: temp directory usage is safe with proper cleanup
  - B108

# Test IDs to run (comment out to run all)
# tests = ['B201', 'B301']

# Severity level threshold (LOW, MEDIUM, HIGH)
# Only report issues with this severity or higher
# level = MEDIUM

# Confidence level threshold (LOW, MEDIUM, HIGH)
# Only report issues with this confidence or higher
# confidence = MEDIUM
